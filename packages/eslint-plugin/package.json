{
  "name": "eslint-plugin-boardsmith",
  "version": "0.0.1",
  "description": "ESLint security rules for BoardSmith game code - enforces sandboxing restrictions (no-network, no-filesystem, no-timers, no-eval, no-nondeterministic)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.7.0"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "boardsmith",
    "game",
    "security"
  ]
}
