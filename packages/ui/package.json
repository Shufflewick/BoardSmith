{
  "name": "@boardsmith/ui",
  "version": "0.1.0",
  "description": "Vue.js UI component library for BoardSmith games - includes GameShell, game state management, and reusable components like Draggable, DiceRoller, and CardFan",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./auto-ui": {
      "types": "./src/components/auto-ui/index.ts",
      "import": "./src/components/auto-ui/index.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vue-tsc && vite build",
    "dev": "vite build --watch"
  },
  "dependencies": {
    "@boardsmith/client": "workspace:*",
    "three": "^0.160.0",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@types/three": "^0.160.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vue-tsc": "^2.0.0"
  },
  "peerDependencies": {
    "vue": ">=3.0.0"
  }
}
